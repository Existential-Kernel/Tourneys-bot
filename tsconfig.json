{
  "compilerOptions": {
    "noImplicitAny": false,
    "noEmitOnError": true,
    "removeComments": false,
    "sourceMap": true,
    "target": "es5",                                    
    "lib": ["ES2017"],                                        
    "module": "commonjs",                                
    "moduleResolution": "node",                       
    "resolveJsonModule": true,                        
    "esModuleInterop": true,                            
    "forceConsistentCasingInFileNames": true,            
    "strict": true,                                      
    "skipLibCheck": true                                 
  },
  "include": ["src/**/*", "dev/commands/achievements.ts"]
}